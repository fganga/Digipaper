<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="6dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <TextView
            android:id="@+id/txv_id_solicitud"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃºmero: "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txv_nombre_solicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solictud: "
            android:textSize="21dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txv_estado_solicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: "
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/imv_more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_cerrar_sesion_24dp"/>

    </RelativeLayout>




</android.support.v7.widget.CardView>
